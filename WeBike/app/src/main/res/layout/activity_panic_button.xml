<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="webike.webike.PanicButtonActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="40sp"
            android:gravity="center"
            android:text="!"
            android:textStyle="bold"
            android:textColor="@color/WeBikeWhite"
            android:padding="20dp"
            android:background="@drawable/red_circle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Botón de pánico"
            android:paddingLeft="20dp"
            android:layout_gravity="center"
            android:textSize="25sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/backgroundGray"
        android:paddingTop="50dp"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Necesitas ayuda?"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:textSize="20sp"/>
        <Button
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5sp"
            android:text="Enviar mensaje de pánico a todos los contactos"
            android:background="@color/WeBikeBlue"
            android:padding="20dp"
            android:textColor="@color/WeBikeWhite"/>
    </LinearLayout>

</LinearLayout>

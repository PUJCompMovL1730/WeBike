<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="webike.webike.PublicationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/text_lines_32"
            />
        <TextView
            android:id="@+id/tv_nombre_publicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paseo a medellÃ­n"
            android:textSize="25sp"
            android:paddingLeft="15dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/backgroundGray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/backgroundGray"
            android:paddingTop="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/inicio"/>
            <TextView
                android:id="@+id/tv_inicio_publicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="casa de juan"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/L2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/backgroundGray"
            android:paddingTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fin"
                />
            <TextView
                android:id="@+id/tv_fin_publicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="medellin"
                android:paddingLeft="15dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/backgroundGray"
            android:paddingTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wall_calendar"
                />
            <TextView
                android:id="@+id/tv_hora_publicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00am"
                android:paddingLeft="15dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/backgroundGray"
            android:padding="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/signal"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scrollbars="vertical"
                android:layout_marginStart="5dp"
                android:fillViewport="true">
                <TextView
                    android:id="@+id/tv_descripcion_publicacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="6"
                    android:background="@color/WeBikeWhite"
                    android:padding="20dp"
                    android:text="esto no es hiper coolgggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggxxxx"
                    android:layout_gravity="center"/>
            </ScrollView>

        </LinearLayout>
            <Button
                android:textColor="@color/WeBikeWhite"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="Participar"
                android:id="@+id/b_participar_publicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/WeBikeBlue"
                />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="webike.webike.PublicationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:id="@+id/L0"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/text_lines_32"
            />
        <TextView
            android:id="@+id/tv_nombre_publicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paseo a medellÃ­n"
            android:textSize="25sp"
            android:paddingLeft="20dp"
            android:layout_gravity="center"
            android:paddingBottom="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/backgroundGray"
        android:padding="10dp"
        android:layout_below="@id/L0"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:src="@drawable/inicio"/>
        <TextView
            android:id="@+id/tv_inicio_publicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="casa de juan"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L2"
        android:layout_below="@id/L1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/backgroundGray"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fin"
            android:paddingRight="15dp"
            android:paddingLeft="20dp"
            />
        <TextView
            android:id="@+id/tv_fin_publicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="medellin"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L3"
        android:layout_below="@id/L2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/backgroundGray"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wall_calendar"
            android:paddingRight="15dp"
            android:paddingLeft="20dp"
            />
        <TextView
            android:id="@+id/tv_hora_publicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00am"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L4"
        android:layout_below="@id/L3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/backgroundGray"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signal"
            android:paddingRight="15dp"
            android:paddingLeft="20dp"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scrollbars="vertical"
            android:layout_marginRight="15dp"
            android:fillViewport="true">
            <TextView
                android:id="@+id/tv_descripcion_publicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="6"
                android:background="@color/WeBikeWhite"
                android:padding="20dp"
                android:text="esto es hiper coolgggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggxxxx"
                android:layout_gravity="center"/>
        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/L4"
        android:background="@color/backgroundGray"
        android:padding="20dp"
        >
        <Button
            android:id="@+id/b_participar_publicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participar"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="#fff"
            android:background="@color/WeBikeBlue"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</RelativeLayout>

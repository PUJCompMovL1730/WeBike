<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context="webike.webike.SelectUserTypeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundGray"
        android:padding="20dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_usuario"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:src="@drawable/user_64"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:text="No soy organización"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/backgroundGray"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_organizacion"
            android:background="@android:color/transparent"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/id_card_64"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:text="Soy organización"/>
    </LinearLayout>

</LinearLayout>
